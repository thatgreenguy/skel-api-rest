{
  "name": "skel-rest",
  "version": "1.0.0",
  "description": "Skeleton REST API node typescript",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx tsc",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "start": "npx pm2 start pm2.yaml",
    "test": "jest --coverage --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "24.0.13",
    "jest": "24.8.0",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.2.1",
    "typescript": "3.5.1"
  },
  "dependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.1",
    "@types/node": "12.0.4",
    "@types/request-promise": "4.1.44",
    "@types/supertest": "2.0.7",
    "@types/swagger-ui-express": "3.0.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "5.0.0-beta.1",
    "pm2": "3.5.1",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "supertest": "4.0.2",
    "swagger-ui-express": "4.0.5"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
